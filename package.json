{
  "name": "teriock",
  "version": "3.0.0",
  "description": "Scripts to manage Teriock Foundry VTT system.",
  "scripts": {
    "build:style": "sass src/style/teriock.scss css/teriock.css --style=expanded",
    "build:templates": "node scripts/update-templates.mjs",
    "fetch:content": "node scripts/fetch-content.mjs",
    "fetch:index": "node scripts/fetch-index.mjs",
    "icon:start": "node scripts/icon-assignment/server.js",
    "icon:status": "curl -s http://localhost:3000/api/health || echo 'Icon tool not running'",
    "icons:assign": "cd scripts/icon-assignment && node assign-icons.mjs",
    "icons:make-use-manifest": "node scripts/icon-assignment/manifest-icons.mjs",
    "icons:server": "nodemon scripts/icon-assignment/server.js",
    "pack:from-JSON": "node scripts/pack-from-json.mjs",
    "pack:to-JSON": "node scripts/pack-to-json.mjs"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Gabriel",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "^1.1.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "sass": "^1.89.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "process": "^0.11.10"
  }
}
