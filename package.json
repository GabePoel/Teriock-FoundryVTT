{
  "name": "teriock",
  "version": "3.0.0",
  "description": "Scripts to manage Teriock Foundry VTT system.",
  "scripts": {
    "build:index": "node scripts/build-index.mjs",
    "build:style": "sass src/style/teriock.scss css/teriock.css --style=expanded",
    "build:templates": "node scripts/build-templates.mjs",
    "compendium:pack": "node scripts/compendium-pack.mjs",
    "compendium:unpack": "node scripts/compendium-unpack.mjs",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "icons:assign": "cd scripts/icon-assignment && node assign-icons.mjs",
    "icons:colorize": "cd scripts/icon-builder && node colorize.mjs",
    "icons:make-use-manifest": "node scripts/icon-assignment/manifest-icons.mjs",
    "icons:ranks": "cd scripts/icon-builder && node ranks-numbers.mjs",
    "icons:server-status": "curl -s http://localhost:3000/api/health || echo 'Icon tool not running'",
    "icons:start-server": "node scripts/icon-assignment/server.js",
    "lint:check": "eslint src/module/teriock.mjs src/module/**/*",
    "lint:fix": "eslint --fix src/module/teriock.mjs src/module/**/*"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Gabriel",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@foundryvtt/foundryvtt-cli": "^1.1.0",
    "cors": "^2.8.5",
    "eslint": "^9.36.0",
    "express": "^4.18.2",
    "globals": "^16.4.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "magickwand.js": "^2.1.0",
    "nodemon": "^3.0.1",
    "prettier": "3.6.2",
    "process": "^0.11.10",
    "sass": "^1.89.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.44.1"
  }
}
