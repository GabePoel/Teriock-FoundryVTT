{
  "name": "teriock",
  "version": "2.0.0",
  "description": "CSS compiler for the Teriock system. Based on the systemless one by Asacolips.",
  "scripts": {
    "content": "node scripts/fetch-content.mjs",
    "format": "prettier --write \"**/*.{js,mjs,ts}\"",
    "format:all": "npm run format && npm run lint:fix",
    "from-JSON": "node scripts/pack-from-json.mjs",
    "icon-tool:assign": "cd scripts/icon-assignment && node assign-icons.mjs",
    "icon-tool:build-use-manifest": "node scripts/icon-assignment/manifest-icons.mjs",
    "icon-tool:server": "nodemon scripts/icon-assignment/server.js",
    "icon-tool:start": "node scripts/icon-assignment/server.js",
    "icon-tool:status": "curl -s http://localhost:3000/api/health || echo 'Icon tool not running'",
    "index": "node scripts/fetch-index.mjs",
    "lint": "eslint src/module/**/* src/templates/**/*",
    "lint:fix": "eslint --fix src/module/**/* src/templates/**/*",
    "style": "sass src/style/teriock.scss css/teriock.css --style=expanded",
    "templates": "node scripts/update-templates.mjs",
    "to-JSON": "node scripts/pack-to-json.mjs"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "Gabriel",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@foundryvtt/foundryvtt-cli": "^1.1.0",
    "@html-eslint/eslint-plugin": "^0.26.0",
    "@html-eslint/parser": "^0.26.0",
    "@stylistic/eslint-plugin": "^4.3.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "process": "^0.11.10"
  }
}
