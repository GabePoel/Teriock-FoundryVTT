{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "include": ["src/**/*.js", "src/**/*.mjs", "src/**/*.d.ts"]
  }
}
