<div class="{{cssClass}}" autocomplete="off">
  <div class="ab-sheet-top">
    <div class="ab-bars">
      <div class="ab-bar ab-bar-1">
        <div class="ab-box-container">
          <div class="ab-box field-box">
            <div class="ab-box-icon">
              <i
                class="fa-light fa-{{lookup (lookup config.tradecraftOptions system.field) "icon"}}"
              ></i>
            </div>
            <div class="ab-box-content">
              {{lookup (lookup config.tradecraftOptions system.field) "name"}}
            </div>
          </div>
        </div>
        <div class="ab-box-container">
          <div class="ab-box tradecraft-box">
            <div class="ab-box-icon">
              <i
                class="fa-light fa-{{lookup
                    (lookup
                      (lookup
                        (lookup config.tradecraftOptions system.field)
                        'tradecrafts'
                      )
                      system.tradecraft
                    )
                    'icon'
                  }}"
              ></i>
            </div>
            <div class="ab-box-content">
              {{lookup
                (lookup
                  (lookup
                    (lookup config.tradecraftOptions system.field) "tradecrafts"
                  )
                  system.tradecraft
                )
                "name"
              }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ab-main">
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Description</span>
      </div>
      <prose-mirror
        name="system.description"
        value="{{system.description}}"
        toggled=true
        editable=editable
      >{{{enrichedDescription}}}</prose-mirror>
    </div>
  </div>
</div>