<div class="dice-roll" data-action="expandRoll">
  {{#if flavor}}
    <div class="teriock-dice-flavor" style="margin-top: 6px">{{{flavor}}}</div>
  {{/if}}
  {{#if (eq formula "0")}}{{else}}
    <div class="dice-result" style="margin-top: 6px;">
      <div class="dice-formula">{{formula}}</div>
      {{{tooltip}}}
      <h4 class="dice-total">{{total}}</h4>
    </div>
  {{/if}}
  <div
    class="button-box"
    style="display: flex; gap: 6px; flex-direction: row; margin-top: 6px; order: 3;"
  >
    <button
      style="flex: 1;"
      class="harm-button"
      data-type="damage"
      data-action="takeDamage"
      data-amount="{{total}}"
    >
      <i class="fa-solid fa-heart"></i>
      Damage
    </button>
    <button
      style="flex: 1;"
      class="harm-button"
      data-type="drain"
      data-action="takeDrain"
      data-amount="{{total}}"
    >
      <i class="fa-solid fa-brain"></i>
      Drain
    </button>
    <button
      style="flex: 1;"
      class="harm-button"
      data-type="wither"
      data-action="takeWither"
      data-amount="{{total}}"
    >
      <i class="fa-solid fa-hourglass-half"></i>
      Wither
    </button>
  </div>
</div>