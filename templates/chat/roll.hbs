<div class="dice-roll" data-action="expandRoll">
  {{#if flavor}}
    <div class="teriock-dice-flavor" style="padding-bottom: 0.5em;">{{{flavor}}}</div>
  {{/if}}
  <div class="dice-result">
    <div class="dice-formula">{{formula}}</div>
    {{{tooltip}}}
    <h4 class="dice-total">{{total}}</h4>
  </div>
</div>