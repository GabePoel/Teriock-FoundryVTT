<div class="dice-roll" data-action="expandRoll">
  {{#if flavor}}
    <div class="teriock-dice-flavor">{{{flavor}}}</div>
  {{/if}}
  {{#if (eq formula "0")}}
  {{else}}
    <div class="dice-result" style="margin-top: 0.5em;">
      <div class="dice-formula">{{formula}}</div>
      {{{tooltip}}}
      <h4 class="dice-total">{{total}}</h4>
    </div>
  {{/if}}
</div>