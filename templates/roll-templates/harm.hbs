<div class="teriock dice-roll" data-action="expandRoll">
  {{#if flavor}}
    <div class="teriock-flavor-text">{{flavor}}</div>
  {{/if}}
  <div class="teriock-dice-message">{{{message}}}</div>
  {{#if (eq formula "0")}}
  {{else}}
    <div class="dice-result" style="margin-top: 0.5em;">
      <div
        class="dice-formula"
        style="word-break: auto-phrase;"
      >
        {{formula}}
      </div>
      {{{tooltip}}}
      <h4 class="dice-total">{{total}}</h4>
    </div>
  {{/if}}
  {{#if (and (exists total) (exists formula))}}
    <div
      class="button-box"
      style="display: flex; gap: 6px; flex-direction: row; margin-top: 6px; order: 3;"
    >
      <button
        class="apply-result teriock-chat-button damage-button"
        data-type="damage"
        data-action="takeDamage"
        data-total="{{total}}"
        data-tooltip="Apply Damage"
      >
        <i class="fa-solid fa-heart"></i>
        Damage
      </button>
      <button
        class="apply-result teriock-chat-button drain-button"
        data-type="drain"
        data-action="takeDrain"
        data-total="{{total}}"
        data-tooltip="Apply Drain"
      >
        <i class="fa-solid fa-brain"></i>
        Drain
      </button>
      <button
        class="apply-result teriock-chat-button wither-button"
        data-type="wither"
        data-action="takeWither"
        data-total="{{total}}"
        data-tooltip="Apply Wither"
      >
        <i class="fa-solid fa-hourglass-half"></i>
        Wither
      </button>
    </div>
  {{/if}}
</div>
