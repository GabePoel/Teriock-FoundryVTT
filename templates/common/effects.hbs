<div class="effects-container">
  {{#if (or editable (exists abilities))}}
    <div class="ab-main">
      {{#if editable}}<button
          class="createAbility"
          data-action="createAbility"
        >Add Ability</button>{{/if}}
      {{abilityCards abilities system}}
    </div>
  {{/if}}
  {{#if (or editable (exists resources))}}
    <div class="ab-main">
      {{#if editable}}<button
          class="createResource"
          data-action="createResource"
        >Add Resource</button>{{/if}}
      {{abilityCards resources system}}
    </div>
  {{/if}}
  {{#if (or editable (exists fluencies))}}
    <div class="ab-main">
      {{#if editable}}<button
          class="createFluency"
          data-action="createFluency"
        >Add Fluency</button>{{/if}}
      {{abilityCards fluencies system}}
    </div>
  {{/if}}
</div>