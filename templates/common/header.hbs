<div class="ab-header {{#if (eq item.type "equipment")}}{{#if system.shattered}}shattered{{/if}}{{/if}}">
  <div class="ab-profile-img timage" data-src="{{img}}">
    <img
      class="profile-img"
      src="{{img}}"
      data-edit="img"
      alt="{{name}}"
      {{#if editable}}data-action="editImage"{{/if}}
      title="{{name}}"
    />
  </div>
  <div class="ab-title">
    <input
      class="tfont-{{system.font}}"
      type="text"
      name="name"
      value="{{name}}"
      placeholder="Name"
      {{#if (not editable)}}
      readonly="true"
      {{/if}}
    />
  </div>
  <div class="ab-top-buttons-container">
    <div class="ab-top-buttons">
      {{#if editable}}
      <div class="ab-icon ab-top-button lock-button" data-action="toggleLockThis" data-tooltip="Unlocked">
        <i class="fa-regular fa-lock-open"></i>
      </div>
      {{else}}
      <div class="ab-icon ab-top-button lock-button" data-action="toggleLockThis" data-tooltip="Locked">
        <i class="fa-regular fa-lock"></i>
      </div>
      {{/if}}
      <div class="ab-icon ab-top-button reload-button" data-action="reloadThis" data-tooltip="Reload">
        <i class="fa-regular fa-arrows-rotate"></i>
      </div>
      <div class="ab-icon ab-top-button import-button" data-action="wikiPullThis" data-tooltip="Pull From Wiki">
        <i class="fa-regular fa-down-to-bracket"></i>
      </div>
      <div class="ab-icon ab-top-button chat-button" data-action="chatThis" data-tooltip="Send to Chat">
        <i class="fa-regular fa-comment"></i>
      </div>
      <div class="ab-icon ab-top-button roll-button" data-action="rollThis" data-tooltip="Roll">
        <i class="fa-regular fa-dice"></i>
      </div>
      <div class="ab-icon ab-top-button open-button" data-action="wikiOpenThis" data-tooltip="Open Wiki Page">
        <i class="fa-regular fa-globe"></i>
      </div>
    </div>
  </div>
</div>
