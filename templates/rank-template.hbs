<div class="{{cssClass}}" autocomplete="off">
  <div class="ab-sheet-top">
    <div class="ab-bars">
      <div class="ab-bar ab-bar-1">
        <div class="ab-box-container">
          <div class="ab-box archetype-box">
            <div class="ab-box-icon">
              <i
                class="fa-light fa-{{lookup
                    (lookup config.rankOptions system.archetype)
                    'icon'
                  }}"
              ></i>
            </div>
            <div class="ab-box-content">
              {{lookup (lookup config.rankOptions system.archetype) "name"}}
            </div>
          </div>
        </div>
        <div class="ab-box-container">
          <div class="ab-box class-box">
            <div class="ab-box-icon">
              <i
                class="fa-light fa-{{lookup
                    (lookup
                      (lookup
                        (lookup config.rankOptions system.archetype) 'classes'
                      )
                      system.className
                    )
                    'icon'
                  }}"
              ></i>
            </div>
            <div class="ab-box-content">
              {{lookup
                (lookup
                  (lookup
                    (lookup config.rankOptions system.archetype) "classes"
                  )
                  system.className
                )
                "name"
              }}
            </div>
          </div>
        </div>
        <div class="ab-box-container">
          <div class="ab-box rank-box">
            <div class="ab-box-icon">
              <i class="fa-light fa-{{system.classRank}}"></i>
            </div>
            <div class="ab-box-content">
              Rank {{system.classRank}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="ab-main">
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Description</span>
      </div>
      <prose-mirror
        name="system.description"
        value="{{system.description}}"
        toggled=true
        editable=editable
      >{{{enrichedDescription}}}</prose-mirror>
    </div>
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Flaws</span>
      </div>
      <prose-mirror
        name="system.flaws"
        value="{{system.flaws}}"
        toggled=true
        editable=editable
      >{{{enrichedFlaws}}}</prose-mirror>
    </div>
  </div>
  {{> "systems/teriock/templates/parts/rank-parts/rank-abilities.hbs" }}
</div>