{{#if (or (exists system.effects) system.elderSorcery)}}
  <div class="ab-tags-container">
    <div class="ab-tags">
      {{#if system.elderSorcery}}
        <span class="ab-tag flag-tag flag-elder-sorcery" data-tooltip="Remove Tag">Elder Sorcery</span>
      {{/if}}
      {{#each system.effects as |key index|}}
        <span class='ab-tag effect-tag' value="{{key}}" data-tooltip="Remove Tag">{{lookup ../config.abilityOptions.effects key}}</span>
      {{/each}}
    </div>
  </div>
{{/if}}