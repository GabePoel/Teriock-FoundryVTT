{{#if (exists system.results.save)}}
  <div class="ab-section-container">
    <div class="ab-section">
      <span class="ab-section-title">On success</span>
    </div>
    <prose-mirror
      name="system.results.save"
      value="{{system.results.save}}"
      toggled=true
      editable=editable
    >{{{onSave}}}</prose-mirror>
  </div>
{{/if}}
{{#if (exists system.results.fail)}}
  <div class="ab-section-container">
    <div class="ab-section">
      <span class="ab-section-title">On fail</span>
    </div>
    <prose-mirror
      name="system.results.fail"
      value="{{system.results.save}}"
      toggled=true
      editable=editable
    >{{{onFail}}}</prose-mirror>
  </div>
{{/if}}