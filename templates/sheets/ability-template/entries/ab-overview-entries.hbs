{{#if (exists system.overview.base)}}
<div class="ab-section-container">
  <div class="ab-section">
    <span class="ab-section-title">Description</span>
  </div>
  {{#if editable}}
  <prose-mirror
    name="system.overview.base"
    value="{{system.overview.base}}"
    toggled="true"
    editable="editable"
  >{{{baseOverview}}}</prose-mirror>
  {{else}}
  {{{baseOverview}}}
  {{/if}}
</div>
{{/if}}
{{#if (exists system.overview.proficient)}}
<div class="ab-section-container {{#if (not system.isProficient)}}faded{{/if}}">
  <div class="ab-section">
    <span class="ab-section-title" {{#if (not system.isProficient)}}data-tooltip="You are not proficient in this."{{/if}}>If proficient</span>
  </div>
  {{#if editable}}
  <prose-mirror
    name="system.overview.proficient"
    value="{{system.overview.proficient}}"
    toggled="true"
    editable="editable"
  >{{{proficientOverview}}}</prose-mirror>
  {{else}}
  {{{proficientOverview}}}
  {{/if}}
</div>
{{/if}}
{{#if (exists system.overview.fluent)}}
<div class="ab-section-container {{#if (not system.isFluent)}}faded{{/if}}">
  <div class="ab-section">
    <span class="ab-section-title" {{#if (not system.isFluent)}}data-tooltip="You are not fluent in this."{{/if}}>If fluent</span>
  </div>
  {{#if editable}}
  <prose-mirror
    name="system.overview.fluent"
    value="{{system.overview.fluent}}"
    toggled="true"
    editable="editable"
  >{{{fluentOverview}}}</prose-mirror>
  {{else}}
  {{{fluentOverview}}}
  {{/if}}
</div>
{{/if}}
