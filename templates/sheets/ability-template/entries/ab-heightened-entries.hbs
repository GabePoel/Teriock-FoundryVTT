<div class="ab-section-container {{#if (not system.isProficient)}}faded{{/if}}">
  <div class="ab-section">
    <span class="ab-section-title" {{#if (not system.isProficient)}}data-tooltip="You must be proficient in this to heighten it."{{/if}}>Heightened</span>
  </div>
  {{#if editable}}
  <prose-mirror
    name="system.heightened"
    value="{{system.heightened}}"
    toggled="true"
    editable="editable"
  >{{{heightened}}}</prose-mirror>
  {{else}}
  {{{heightened}}}
  {{/if}}
</div>
