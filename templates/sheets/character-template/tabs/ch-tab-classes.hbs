<div class="character-tab classes">
  <h1>Classes</h1>
  <div class="tcard-display">
    <div class="tcard-options">
      {{tcardOptions system.sheet.menus.rankOptions null null system.sheet.rankFilters.search "rank"}}
    </div>
    <div class="tcard-container {{#if system.sheet.display.rank.gapless}}gapless{{/if}} {{system.sheet.display.rank.size}}">
      {{#each ranks as |item|}}
        {{tcard
          img=item.img
          title=(className item.system.archetype item.system.className)
          subtitle=(concat "Rank " item.system.classitem)
          text=(classArchetype item.system.archetype)
          id=item._id
          active=(not item.system.disabled)
          icons=(concat
            (ticon (firstDie item.system.hitDie) cssClass="roll" action="useHitDie" id=item._id)
            (ticon (firstDie item.system.manaDie) cssClass="roll" action="useManaDie" id=item._id)
            (ticon "comment" action="chatDoc" id=item._id)
            (ticonToggle "circle-check" "circle" (not item.system.disabled) action="toggleDisabledDoc" id=item._id)
          )
        }}
      {{/each}}
    </div>
    {{#if (not (exists ranks))}}
      <div class="no-results">
        <p>No ranks found.</p>
      </div>
    {{/if}}
  </div>
</div>