<div class="character-tab conditions">
  <h1>Conditions</h1>
  <div class="character-tab-page">
    {{#each conditions as |condition|}}
      <div class="tcard-display condition-display">
        <div class="condition-header">
          <h4>{{{lookup (lookup ../config.content.conditions condition) 'name'}}}</h4>
          <img class="condition-toggle" src="{{{lookup (lookup ../config.content.conditions condition) 'img'}}}" alt="{{{lookup (lookup ../config.content.conditions condition) 'name'}}}" data-action="removeCondition" data-condition="{{condition}}" data-tooltip="Remove Condition"/>
        </div>
        {{{lookup (lookup ../config.content.conditions condition) 'content'}}}
      </div>
    {{/each}}
    <div class="tcard-display">
      <div class="tcard-options">
        {{tcardOptions system.sheet.menus.effectOptions null null system.sheet.effectFilters.search "effect"}}
      </div>
      {{abilityCards effects system "effect"}}
      {{#if (not (exists effects))}}
        <div class="no-results">
          <p>No effects found.</p>
        </div>
      {{/if}}
    </div>
  </div>
</div>