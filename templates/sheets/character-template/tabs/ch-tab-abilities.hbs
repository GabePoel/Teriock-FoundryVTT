<div class="character-tab abilities">
  <h1>Abilities</h1>
  <div class="tcard-display">
    <div class="tcard-options">
      {{tcardOptions system.sheet.menus.abilityOptions system.sheet.menus.abilityFilters system.sheet.menus.abilitySort system.sheet.abilityFilters.search "ability" sortOptions=config.displayOptions.abilitySortOrders sortValue=system.sheet.abilitySortOption showAddButton=false}}
      {{#if system.sheet.menus.abilityFilters}}
      <div class="tcard-options-content">
        {{> 'systems/teriock/templates/sheets/character-template/filters/ch-ability-filter.hbs'}}
      </div>
      {{/if}}
    </div>
    {{> 'systems/teriock/templates/sheets/character-template/results/ch-ability-results.hbs'}}
  </div>
</div>
