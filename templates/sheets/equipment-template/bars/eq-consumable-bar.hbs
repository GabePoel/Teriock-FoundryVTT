{{#if system.consumable}}
  <div class="ab-bar">
    <div class="ab-box-container">
      <div class="ab-box quantity-box">
        <div class="ab-box-icon">
          <i class="fa-light fa-hashtag"></i>
        </div>
        <div class="ab-box-content">
          <input
            class="ability-bar-input quantity-input"
            name="system.quantity"
            type="number"
            value="{{system.quantity}}"
            data-edit="system.quantity"
            placeholder="Remaining"
            max="{{system.maxQuantity}}"
          />
        </div>
        <div class="ab-box-label">
          Count
        </div>
      </div>
    </div>
    <div class="ab-box-container">
      <div class="ab-box max-box">
        <div class="ab-box-icon">
          <i class="fa-light fa-infinity"></i>
        </div>
        <div class="ab-box-content">
          <input
            class="ability-bar-input max-input"
            name="system.maxQuantity"
            type="number"
            value="{{system.maxQuantity}}"
            data-edit="system.maxQuantity"
            placeholder="Infinite"
          />
        </div>
        <div class="ab-box-label">
          Max
        </div>
      </div>
    </div>
  </div>
{{/if}}