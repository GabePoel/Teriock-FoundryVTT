<div class="ab-bar">
  <div class="ab-box-container">
    <div class="ab-box power-level-box" data-tooltip="Power Level">
      <div
        class="ab-box-icon"
        style="color: {{lookup
          (lookup config.equipmentOptions.powerLevel system.powerLevel)
          'color'
        }};"
      >
        <i
          class="fa-light fa-{{lookup
              (lookup config.equipmentOptions.powerLevel system.powerLevel)
              'icon'
            }}"
        ></i>
      </div>
      <div class="ab-box-content">
        {{{lookup
          (lookup config.equipmentOptions.powerLevel system.powerLevel)
          "name"
        }}}
      </div>
    </div>
  </div>
  <div class="ab-box-container">
    <div class="ab-box equipment-type-box" data-tooltip="Equipment Type">
      <div class="ab-box-icon">
        <i class="fa-light fa-staff"></i>
      </div>
      <div class="ab-box-content">
        <input
          class="ability-bar-input equipment-type-input capitalization-input"
          name="system.equipmentType"
          type="text"
          value="{{system.equipmentType}}"
          data-edit="system.equipmentType"
          placeholder="Equipment Type"
        />
      </div>
    </div>
  </div>
  <div class="ab-box-container">
    <div
      class="ab-box equipped-box"
      data-action="toggleEquipped"
      data-tooltip="Equipped?"
    >
      <div class="ab-box-icon">
        {{#if system.equipped}}
          <i class="fa-light fa-check"></i>
        {{else}}
          <i class="fa-light fa-xmark"></i>
        {{/if}}
      </div>
      <div class="ab-box-content">
        {{#if system.equipped}}
          Equipped
        {{else}}
          Unequipped
        {{/if}}
      </div>
    </div>
  </div>
</div>