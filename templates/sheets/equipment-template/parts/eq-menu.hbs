        <div class="tgrid-item">
          <div
            class="ab-multi-select-label ab-multi-select-material-properties"
          >
            <select
              {{#if (not editable)}}
              disabled="true"
              {{/if}}
              name="system.sb"
            >
              <option value="">Style Bonus</option>
              {{selectOptions
              config.equipmentOptions.weaponFightingStyles
