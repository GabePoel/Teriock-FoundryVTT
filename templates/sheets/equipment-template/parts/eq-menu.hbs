<div class="ab-menu">
  <div class="ab-menu-content">
    <div class="ab-menu-bar">
      <div class="tgrid ab-check-grid">
        {{formGroup
        systemFields.glued
        value=system.glued
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        }}
        {{formGroup
        systemFields.shattered
        value=system.shattered
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        dataset=(dataset action="toggleShattered")  
        }}
        {{formGroup
        systemFields.dampened
        value=system.dampened
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        dataset=(dataset action="toggleDampened")
        }}
        {{
        formGroup
        systemFields.consumable
        value=system.consumable
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        }}
        {{
        formGroup
        systemFields.equipped
        value=system.equipped
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        dataset=(dataset action="toggleEquipped")
        }}
        {{
        formGroup
        systemFields.proficient
        value=system.proficient
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        }}
        {{formGroup
        systemFields.fluent
        value=system.fluent
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        }}
        {{
        formGroup
        systemFields.disabled
        value=system.disabled
        disabled=(not editable)
        classes="tgrid-item"
        rootId=(concat uuid)
        }}
      </div>
    </div>
    <div class="ab-menu-bar">
      <div class="tgrid g2">
        <div class="tgrid-item">
          <div class="ab-multi-select-label ab-multi-select-equipment-classes">
            <multi-select
              {{#if (not editable)}}
              disabled="true"
              {{/if}}
              name="system.equipmentClasses"
              data-edit="system.equipmentClasses"
            >
              {{selectOptions
              config.equipmentOptions.equipmentClasses
              selected=system.equipmentClasses
              }}
            </multi-select>
          </div>
        </div>
