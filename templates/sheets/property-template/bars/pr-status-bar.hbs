<div class="ab-bar">
  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}property-type-box{{/if}}" data-tooltip="Property Type">
      <div
        class="ab-box-icon"
        style="color: {{lookup
          (lookup config.abilityOptions.abilityType system.propertyType)
          'color'
        }};"
      >
        <i
          class="fa-light fa-{{lookup
              (lookup config.abilityOptions.abilityType system.propertyType)
              'icon'
            }}"
        ></i>
      </div>
      <div class="ab-box-content">
        {{{lookup
          (lookup config.abilityOptions.abilityType system.propertyType)
          "name"
        }}}
      </div>
    </div>
  </div>
</div>