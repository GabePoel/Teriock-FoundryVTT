<div class="ab-bar">
  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}property-type-box{{/if}}" data-tooltip="Property Type">
      <div
        class="ab-box-icon"
        style="color: {{lookup
          (lookup config.abilityOptions.abilityType system.propertyType)
          'color'
        }};"
      >
        <i
          class="fa-light fa-{{lookup
              (lookup config.abilityOptions.abilityType system.propertyType)
              'icon'
            }}"
        ></i>
      </div>
      <div class="ab-box-content">
        {{{lookup
          (lookup config.abilityOptions.abilityType system.propertyType)
          "name"
        }}}
      </div>
    </div>
  </div>
  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}damage-type-box{{/if}}" data-tooltip="Damage Type">
      <div class="ab-box-icon">
        <i class="fa-light fa-hammer-crash"></i>
      </div>
      <div class="ab-box-content">
        <input
          class="ability-bar-input damage-type-input"
          name="system.damageType"
          type="text"
          value="{{system.damageType}}"
          data-edit="system.damageType"
          placeholder="Damage Type"
          {{#if (not editable)}}
            disabled="true"
          {{/if}}
        />
      </div>
    </div>
  </div>
</div>