{{#if
  (or
    (eq system.costs.mp.type "variable")
    (eq system.costs.hp.type "variable")
    (eq system.costs.gp.type "variable")
    (exists system.costs.materialCost)
  )
}}
  {{#if (eq system.costs.mp.type "variable")}}
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Mana cost</span>
      </div>
      {{#if editable}}
        <prose-mirror
          name="system.costs.mp.value.variable"
          value="{{system.costs.mp.value.variable}}"
          toggled="true"
          editable="editable"
        ><div class="text-preview">{{{manaCost}}}</div></prose-mirror>
      {{else}}
        <div class="text-preview">{{{manaCost}}}</div>
      {{/if}}
    </div>
  {{/if}}
  {{#if (eq system.costs.hp.type "variable")}}
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Hit cost</span>
      </div>
      {{#if editable}}
        <prose-mirror
          name="system.costs.hp.value.variable"
          value="{{system.costs.hp.value.variable}}"
          toggled="true"
          editable="editable"
        ><div class="text-preview">{{{hitCost}}}</div></prose-mirror>
      {{else}}
        <div class="text-preview">{{{hitCost}}}</div>
      {{/if}}
    </div>
  {{/if}}
  {{#if (eq system.costs.gp.type "variable")}}
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Gold cost</span>
      </div>
      {{#if editable}}
        <prose-mirror
          name="system.costs.gp.value.variable"
          value="{{system.costs.gp.value.variable}}"
          toggled="true"
          editable="editable"
        ><div class="text-preview">{{{goldCost}}}</div></prose-mirror>
      {{else}}
        <div class="text-preview">{{{goldCost}}}</div>
      {{/if}}
    </div>
  {{/if}}
  {{#if (exists system.costs.materialCost)}}
    <div class="ab-section-container">
      <div class="ab-section">
        <span class="ab-section-title">Material cost</span>
      </div>
      {{#if editable}}
        <prose-mirror
          name="system.costs.materialCost"
          value="{{system.costs.materialCost}}"
          toggled="true"
          editable="editable"
        ><div class="text-preview">{{{materialCost}}}</div></prose-mirror>
      {{else}}
        <div class="text-preview">{{{materialCost}}}</div>
      {{/if}}
    </div>
  {{/if}}
{{/if}}
