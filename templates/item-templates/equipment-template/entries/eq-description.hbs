<div class="ab-section-container">
  <div class="ab-section">
    <span class="ab-section-title">Description</span>
  </div>
  {{#if editable}}
    <prose-mirror
      name="system.description"
      value="{{system.description}}"
      toggled="true"
      editable="editable"
    ><div class="text-preview">{{{enrichedDescription}}}</div></prose-mirror>
  {{else}}
    <div class="text-preview">{{{enrichedDescription}}}</div>
  {{/if}}
</div>
