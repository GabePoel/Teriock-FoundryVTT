{{#if (exists system.results.critHit)}}
  <div class="ab-section-container">
    <div class="ab-section">
      <span class="ab-section-title">On critical hit</span>
    </div>
    {{#if editable}}
      <prose-mirror
        name="system.results.critHit"
        value="{{system.results.critHit}}"
        toggled="true"
        editable="editable"
      ><div class="text-preview">{{{onCriticalHit}}}</div></prose-mirror>
    {{else}}
      <div class="text-preview">{{{onCriticalHit}}}</div>
    {{/if}}
  </div>
{{/if}}
