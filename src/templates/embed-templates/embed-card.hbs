<div
  class="tcard
    {{classes}}
    {{#if draggable}}draggable{{/if}}
    {{#if inactive}}inactive{{else}}active{{/if}}
    {{#if struck}}struck{{/if}}
    {{#if shattered}}shattered{{/if}}
    {{#if hidden}}hidden{{/if}}
  "
  data-img="{{img}}"
  {{#if openable}}data-action="openDoc" {{/if}}
  {{#if uuid}}data-uuid="{{uuid}}" {{/if}}
  {{#if id}}data-id="{{id}}" {{/if}}
  {{#if parentId}}data-parent-id="{{parentId}}" {{/if}}
  {{#if type}}data-type="{{type}}"{{/if}}
  {{#if relative}}data-relative="{{relative}}" {{/if}}
  {{#if makeTooltip}}data-make-tooltip="true" {{/if}}
  {{#if (exists tooltip)}}
  data-tooltip="{{tooltip}}"
  {{/if}}
  data-tooltip-direction="RIGHT"
  data-rich-tooltip="true"
  data-tooltip-class="teriock"
>
  <div
    class="tcard-image {{#if usable}}usable{{/if}}"
    {{#if color}}
    style="outline-color: {{color}};"
    {{/if}}
    {{#if usable}}
    data-tooltip="Use This"
    data-tooltip-direction="LEFT"
    {{/if}}
    {{#if action}}
    data-action="{{action}}"
    {{/if}}
    data-shareable="true"
  >
    <img src="{{img}}" alt="">
  </div>
  <div class="tcard-body">
    <div class="tcard-titles">
      <div class="tcard-title">{{title}}</div>
      <div
        class="tcard-subtitle {{#if subtitleAction}}tcard-clickable{{/if}}"
        {{#if subtitleAction}}
        data-action="{{subtitleAction}}"
        {{/if}}
        {{#if subtitleTooltip}}
        data-tooltip-direction="DOWN"
        data-tooltip-class="teriock"
        data-tooltip="{{subtitleTooltip}}"
        {{/if}}
      >{{subtitle}}</div>
    </div>
    <div class="tcard-content">
      <div class="tcard-text">{{text}}</div>
      <div
        class="tcard-icons"
        data-tooltip-direction="DOWN"
        data-tooltip-class="teriock"
      >{{#each icons}}
        <i
          class="ticon
            fa-fw
            fa-{{#if style}}{{style}}{{else}}light{{/if}}
            fa-{{icon}}
            {{classes}}
            {{#if (and clickable condition)}}tcard-clickable{{/if}}
          "
          {{#if (and (or (not (defined condition)) condition) action)}}data-action="{{action}}" {{/if}}
          {{#if tooltip}}data-tooltip="{{tooltip}}" {{/if}}
          {{#if dataset}}
            {{#each dataset as |value key|}}data-{{key}}="{{value}}"{{/each}}
          {{/if}}
        ></i>
      {{/each}}</div>
    </div>
  </div>
  <div class="tcard-background"></div>
</div>
