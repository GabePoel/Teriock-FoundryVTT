<div class="{{cssClass}} tsheet-page">
  <div class="ab-sheet-everything">
    <div class="ab-sheet-top">
      {{> "systems/teriock/src/templates/shared/header.hbs"}}
      <div class="ab-bars">
        {{> "systems/teriock/src/templates/item-templates/rank-template/bars/rk-bar-class.hbs" }}
        {{> "systems/teriock/src/templates/item-templates/rank-template/bars/rk-bar-stats.hbs" }}
      </div>
    </div>
    <div class="ab-main">
      <div class="ab-section-container">
        <div class="ab-section">
          <span class="ab-section-title">Description</span>
        </div>
        {{#if editable}}
          <prose-mirror
            name="system.description"
            value="{{system.description}}"
            toggled="true"
            editable="editable"
          ><div class="text-preview">{{{enrichedDescription}}}</div></prose-mirror>
        {{else}}
          <div class="text-preview">{{{enrichedDescription}}}</div>
        {{/if}}
      </div>
      <div class="ab-section-container">
        <div class="ab-section">
          <span class="ab-section-title">Flaws</span>
        </div>
        {{#if editable}}
          <prose-mirror
            name="system.flaws"
            value="{{system.flaws}}"
            toggled="true"
            editable="editable"
          ><div class="text-preview">{{{enrichedFlaws}}}</div></prose-mirror>
        {{else}}
          <div class="text-preview">{{{enrichedFlaws}}}</div>
        {{/if}}
      </div>
    </div>
    {{> "systems/teriock/src/templates/shared/effects.hbs"}}
  </div>
</div>
