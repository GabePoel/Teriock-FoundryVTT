<div class="character-tab conditions">
  <h1>Effects</h1>
  <div class="character-tab-page">
    {{#each conditions as |condition|}}
      <div class="tcard-display condition-display">
        <div
          class="condition-header"
          data-action="toggleConditionExpansion"
          data-condition="{{condition}}"
        >
          <h4 data-tooltip="Expand or Collapse">{{{lookup (lookup ../config.content.conditions condition) 'name'}}}</h4>
          <img
            class="condition-toggle {{#if (includes ../removableConditions condition)}}removable{{else}}locked{{/if}}"
            src="{{{lookup (lookup ../config.content.conditions condition) 'img'}}}"
            alt="{{{lookup (lookup ../config.content.conditions condition) 'name'}}}"
            {{#if (includes ../removableConditions condition)}}data-action="removeCondition"{{/if}}
            data-condition="{{condition}}"
            data-tooltip="{{#if (includes ../removableConditions condition)}}Remove Condition{{else}}Locked{{/if}}">
        </div>
        <div class="condition-body {{condition}} {{#if
          (lookup ../settings.conditionExpansions condition)}}expanded{{else}}collapsed{{/if}}">
          {{{lookup (lookup ../config.content.conditions condition) 'content'}}}
        </div>
      </div>
    {{/each}}
    <div class="tcard-display">
      <div class="tcard-options">
        {{tcardOptions settings.menus.effectOptions null null settings.effectFilters.search "effect"}}
      </div>
      {{> 'systems/teriock/src/templates/actor-templates/character-template/results/ch-effect-results.hbs'}}
    </div>
    <div class="tcard-display">
      {{> 'systems/teriock/src/templates/actor-templates/character-template/results/ch-attunement-results.hbs'}}
    </div>
  </div>
</div>
