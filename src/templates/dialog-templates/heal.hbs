<form class="dialog-form standard-form heal-dialog">
  <div class="stat-header">
    <div class="ab-profile-img timage" data-tooltip="{{name}}">
      <img src="{{img}}" alt="">
    </div>
    <div class="stat-bar">
      {{> (template "document-templates/actor-templates/playable-template/parts/ch-bar-hp.hbs")}}
    </div>
  </div>
  <p class="hint">Click on the hacks you want to heal{{#if (not noDice)}}
    and the hit dice you want to spend.{{/if}}</p>
  <fieldset class="heal-dialog-hacks">
    <legend>Hacks</legend>
    {{> (template "document-templates/actor-templates/playable-template/parts/ch-hack-box.hbs") }}
  </fieldset>
  {{#if (not noDice)}}
    <fieldset class="heal-dialog-dice">
      <legend>Hit Dice</legend>
      <div class="tgrid g7">
        {{{system.sheet.dieBox.hp}}}
      </div>
    </fieldset>
  {{/if}}
  {{#if (not noDice)}}
    {{formGroup
      forHarmField
      value=forHarm
      rootId=uuid
      name="for-harm"
    }}
    {{formGroup
      consumeStatDiceField
      value=consumeStatDice
      rootId=uuid
      name="consume-dice"
    }}
  {{/if}}
  <footer class="form-footer" style="margin-top:auto;">
    <button type="submit" data-action="ok" autofocus>
      {{makeIcon TERIOCK.display.icons.ui.done "button"}}<span>Done</span>
    </button>
  </footer>
</form>
