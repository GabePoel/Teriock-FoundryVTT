<div class="{{cssClass}} standard-form scrollable">
  {{#if hasCompendiumSource}}
    <fieldset>
      <legend>Sources</legend>
      {{formGroup
        document.schema.fields._stats.fields.compendiumSource
        value=document._stats.compendiumSource
        rootId=id
        hint=(localize "TERIOCK.SHEETS.DocumentSettings.FIELDS.compendiumSource.hint")
        label=(localize "TERIOCK.SHEETS.DocumentSettings.FIELDS.compendiumSource.label")
      }}
    </fieldset>
  {{/if}}
  {{#if hasQualifiers}}
    <fieldset>
      <legend>{{localize "TERIOCK.SHEETS.DocumentSettings.FIELDS.qualifiers.legend"}}</legend>
      {{formGroup
        document.system.schema.fields.qualifiers.fields.ephemeral.fields.raw
        value=document.system.qualifiers.ephemeral.raw
        rootId=id
      }}
      {{formGroup
        document.system.schema.fields.qualifiers.fields.suppressed.fields.raw
        value=document.system.qualifiers.suppressed.raw
        rootId=id
      }}
    </fieldset>
  {{/if}}
  {{#if hasOtherSettings}}
    <fieldset>
      <legend>{{localize "TERIOCK.SHEETS.DocumentSettings.FIELDS.automatedBehavior.legend"}}</legend>
      {{#each otherSettings as |value name|}}
        {{formGroup
          (path @root/document.flags.teriockDocumentSettings.schema.fields name)
          value=value
          rootId=@root/id
          name=(concat "flags.teriockDocumentSettings." name)
        }}
      {{/each}}
    </fieldset>
  {{/if}}
  {{#if hasSheetSettings}}
    <fieldset>
      <legend>{{localize "TERIOCK.SHEETS.DocumentSettings.FIELDS.sheetDisplay.legend"}}</legend>
      {{#each sheetSettings as |value name|}}
        {{formGroup
          (path @root/document.flags.teriockDocumentSettings.schema.fields name)
          value=value
          rootId=@root/id
          name=(concat "flags.teriockDocumentSettings." name)
        }}
      {{/each}}
    </fieldset>
  {{/if}}
</div>