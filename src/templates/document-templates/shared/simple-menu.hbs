<div class="ab-menu">
  <div class="ab-menu-content">
    <div class="ab-menu-bar">
      <div class="tgrid ab-check-grid g1">
        {{> (template "document-templates/shared/display-toggles.hbs")}}
      </div>
    </div>
    {{#if (exists displayFieldButtons)}}
      <div class="ab-menu-bar">
        <div class="tgrid ab-button-grid g2">
          {{> (template "document-templates/shared/display-field-buttons.hbs")}}
        </div>
      </div>
    {{/if}}
  </div>
</div>
<div class="ab-main">
  <div class="ab-tags-all">
    <div class="ab-tags-container">
      <div class="ab-tags">
        <span class="ab-tag tsubtle">{{#if document.active}}Active{{else}}Inactive{{/if}}</span>
      </div>
      <div class="ab-icon ab-menu-toggle">
        <div class="ab-menu-closed-container" data-tooltip="Open Menu">
          {{makeIcon TERIOCK.display.icons.ui.menuOpen "solid"}}
        </div>
        <div class="ab-menu-open-container" data-tooltip="Close Menu">
          {{makeIcon TERIOCK.display.icons.ui.menuClose "solid"}}
        </div>
      </div>
    </div>
  </div>
  {{> (template "document-templates/shared/display-fields.hbs")}}
</div>