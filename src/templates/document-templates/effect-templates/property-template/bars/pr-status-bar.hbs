<div class="ab-bar">
  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}property-type-box{{/if}}" data-tooltip="Property Type">
      <div
        class="ab-box-icon"
        style="color: {{path config.abilityOptions.form system.form 'color'}};"
      >
        <i
          class="fa-fw fa-light fa-{{path config.abilityOptions.form system.form 'icon'}}"
        ></i>
      </div>
      <div class="ab-box-content">
        {{{path config.abilityOptions.form system.form "name"}}}
      </div>
    </div>
  </div>
  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}damage-type-box{{/if}}" data-tooltip="Damage Type">
      <div class="ab-box-icon">
        <i class="fa-fw fa-light fa-hammer-crash"></i>
      </div>
      <div class="ab-box-content">
        {{formInput
          systemFields.damageType
          value=system.damageType
          classes="ability-bar-input damage-type-input"
          disabled=(not editable)
          dataset=(dataset tooltip="Damage Type")
        }}
      </div>
    </div>
  </div>
</div>