<div class="ab-menu">
  <div class="ab-menu-content">
    <div class="ab-menu-bar">
      <div class="tgrid ap-check-grid g3">
        {{formGroup
          systemFields.applyIfShattered
          value=system.applyIfShattered
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
        {{formGroup
          systemFields.applyIfDampened
          value=system.applyIfDampened
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
        {{formGroup
          systemFields.modifiesActor
          value=system.modifiesActor
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
      </div>
      <div class="tgrid ap-check-grid g2">
        {{#if (not (exists system.limitation))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-limitation-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{config.display.icons.add}}}
              Limitation
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.improvement))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-improvement-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{config.display.icons.add}}}
              Improvement
            </button>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>