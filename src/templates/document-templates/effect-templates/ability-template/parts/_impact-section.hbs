<div class="form-group" style="flex-direction: column;">
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.common")
    value=(path system "applies" typeKey "common")
    classes="teriock-full-width"
    disabled=(not editable)
    rootId=uuid
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.rolls")
    value=(path system "applies" typeKey "rolls")
    choices=TERIOCK.options.consequence.rolls
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.statuses")
    value=(path system "applies" typeKey "statuses")
    choices=TERIOCK.index.conditions
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.startStatuses")
    value=(path system "applies" typeKey "startStatuses")
    choices=TERIOCK.index.conditions
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.endStatuses")
    value=(path system "applies" typeKey "endStatuses")
    choices=TERIOCK.index.conditions
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.hacks")
    value=(path system "applies" typeKey "hacks")
    choices=TERIOCK.options.consequence.hacks
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.checks")
    value=(path system "applies" typeKey "checks")
    choices=TERIOCK.index.tradecrafts
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.duration")
    value=(path system "applies" typeKey "duration")
    classes="teriock-full-width"
    disabled=(not editable)
  }}
  <!-- Changes UI -->
  <fieldset class="teriock-full-width">
    <legend>Changes</legend>
    {{> "systems/teriock/src/templates/document-templates/shared/changes.hbs"
      changesPath=(concat "system.applies." typeKey ".changes")
      changesData=(path system "applies" typeKey "changes")
      fieldDefs=(path systemFields "applies.fields" typeKey "fields.changes.element.fields")
      additionalAttrs=(hash application=typeKey)
    }}
  </fieldset>
  <!-- Expiration UI -->
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.expiration.fields.doesExpire")
    value=(path system "applies" typeKey "expiration.doesExpire")
    disabled=(not editable)
    classes="teriock-full-width"
    rootId=uuid
  }}
  {{#if (path system "applies" typeKey "expiration.doesExpire")}}
    <fieldset class="teriock-full-width" style="margin-top: 6px;">
      <legend>Normal Combat Expiration</legend>
      {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_impact-expiration.hbs"
        editable=editable
        expirationKey="normal"
        system=system
        systemFields=systemFields
        typeKey=typeKey
      }}
    </fieldset>
    {{formGroup
      (path systemFields "applies.fields" typeKey "fields.expiration.fields.changeOnCrit")
      value=(path system "applies" typeKey "expiration.changeOnCrit")
      disabled=(not editable)
      classes="teriock-full-width"
      rootId=uuid
    }}
  {{/if}}
  {{#if (path system "applies" typeKey "expiration.changeOnCrit")}}
    <fieldset class="teriock-full-width" style="margin-top: 6px;">
      <legend>Crit Combat Expiration</legend>
      {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_impact-expiration.hbs"
        editable=editable
        expirationKey="crit"
        system=system
        systemFields=systemFields
        typeKey=typeKey
      }}
    </fieldset>
  {{/if}}
  {{formGroup
    (path systemFields "applies.fields" typeKey "fields.transformation.fields.enabled")
    value=(path system "applies" typeKey "transformation.enabled")
    disabled=(not editable)
    classes="teriock-full-width"
    rootId=uuid
  }}
  {{#if (path system "applies" typeKey "transformation.enabled")}}
    <fieldset class="teriock-full-width" style="margin-top: 6px;">
      <legend>Transformation</legend>
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.level")
        value=(path system "applies" typeKey "transformation.level")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.uuid")
        value=(path system "applies" typeKey "transformation.uuid")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.image")
        value=(path system "applies" typeKey "transformation.image")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.suppression.fields.bodyParts")
        value=(path system "applies" typeKey "transformation.suppression.bodyParts")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.suppression.fields.equipment")
        value=(path system "applies" typeKey "transformation.suppression.equipment")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.suppression.fields.fluencies")
        value=(path system "applies" typeKey "transformation.suppression.fluencies")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
      {{formGroup
        (path systemFields "applies.fields" typeKey "fields.transformation.fields.suppression.fields.ranks")
        value=(path system "applies" typeKey "transformation.suppression.ranks")
        disabled=(not editable)
        classes="teriock-full-width"
        rootId=uuid
      }}
    </fieldset>
  {{/if}}
</div>