<div class="ab-consequences-tab ab-sheet-everything" style="width: 100%;">
  <div class="ab-sheet-top" style="border-bottom: 1px solid var(--color-border);">
    {{> "systems/teriock/src/templates/document-templates/shared/header.hbs"}}
  </div>
  <div class="ab-consequences" style="padding: 1rem; width: 100%; height: 100%;">
    <nav class="sheet-tabs tabs">
      <a data-action="consequenceTab" data-group="sheet" data-tab="base"
         class="{{#if (eq consequenceTab "base")}}active{{/if}}">
        <i class="fa-solid fa-certificate" inert=""></i>
        <span>Base</span>
      </a>
      <a data-action="consequenceTab" data-group="sheet" data-tab="proficient"
         class="{{#if (eq consequenceTab "proficient")}}active{{/if}}">
        <i class="fa-solid fa-award-simple" inert=""></i>
        <span>Proficient</span>
      </a>
      <a data-action="consequenceTab" data-group="sheet" data-tab="fluent"
         class="{{#if (eq consequenceTab "fluent")}}active{{/if}}">
        <i class="fa-solid fa-award" inert=""></i>
        <span>Fluent</span>
      </a>
      <a data-action="consequenceTab" data-group="sheet" data-tab="heightened"
         class="{{#if (eq consequenceTab "heightened")}}active{{/if}}">
        <i class="fa-solid fa-chevrons-up" inert=""></i>
        <span>Heightened</span>
      </a>
      <a data-action="consequenceTab" data-group="sheet" data-tab="custom"
         class="{{#if (eq consequenceTab "custom")}}active{{/if}}">
        <i class="fa-solid fa-code" inert=""></i>
        <span>Custom</span>
      </a>
    </nav>
    <div class="ab-consequences-config" style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1rem;">
      {{#if (eq consequenceTab "base")}}
        {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_consequence-section.hbs"
          typeKey="base"
          displayName="Base Consequences"
          systemFields=systemFields
          system=system
          config=config
          editable=editable
        }}
      {{/if}}
      {{#if (eq consequenceTab "proficient")}}
        {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_consequence-section.hbs"
          typeKey="proficient"
          displayName="Proficient Consequences"
          systemFields=systemFields
          system=system
          config=config
          editable=editable
        }}
      {{/if}}
      {{#if (eq consequenceTab "fluent")}}
        {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_consequence-section.hbs"
          typeKey="fluent"
          displayName="Fluent Consequences"
          systemFields=systemFields
          system=system
          config=config
          editable=editable
        }}
      {{/if}}
      {{#if (eq consequenceTab "heightened")}}
        {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_consequence-section.hbs"
          typeKey="heightened"
          displayName="Heightened Consequences"
          systemFields=systemFields
          system=system
          config=config
          editable=editable
        }}
      {{/if}}
      {{#if (eq consequenceTab "custom")}}
        {{> "systems/teriock/src/templates/document-templates/effect-templates/ability-template/parts/_consequence-macros.hbs"}}
      {{/if}}
      {{#if (eq consequenceTab "customNOT")}}
        <dev class="tcard-container">
          {{#if (exists macro)}}
            {{tcard
              img=macro.img
              title=macro.name
              subtitle="Custom Ability Execution"
              text="Macro"
              icons=(ticon "link-slash" tooltip="Unlink Macro" action="unlinkMacro")
              type="macro"
              id=macro.uuid
            }}
          {{else}}
            {{tcard
              img="systems/teriock/assets/uncertainty.svg"
              title="No Macro Set"
              subtitle="Custom Ability Execution"
              text="Macro"
              icons=""
              draggable=false
            }}
          {{/if}}
        </dev>
      {{/if}}
    </div>
    <button
      class="ab-consequences-close"
      data-action="toggleConsequences"
      style="width: 100%; margin-top: 1.5rem;"
      data-tooltip="Close Consequences"
    >
      <i class="fa-solid fa-check"></i>
      Done
    </button>
  </div>
</div>
