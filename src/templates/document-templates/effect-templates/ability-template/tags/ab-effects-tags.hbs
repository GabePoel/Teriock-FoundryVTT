{{#if (or (exists effectTags) system.elderSorcery)}}
  <div class="ab-tags-container">
    <div class="ab-tags">
      {{#if system.warded}}
        <span class="ab-tag tsubtle flag-tag flag-warded" data-tooltip="Remove Tag">Warded</span>
      {{/if}}
      {{#if system.elderSorcery}}
        <span class="ab-tag tsubtle flag-tag flag-elder-sorcery" data-tooltip="Remove Tag">Elder Sorcery</span>
      {{/if}}
      {{#each effectTags as |key index|}}
        <span class="ab-tag tsubtle effect-tag" data-value="{{key}}" data-tooltip="Remove Tag">{{lookup
          ../TERIOCK.options.ability.effectTypes key}}</span>
      {{/each}}
    </div>
  </div>
{{/if}}
