<div class="ab-bar ab-bar-1">
  <div class="ab-box-container">
    <div
      class="ab-box {{#if editable}}execution-box{{/if}} ab-input-box"
      data-maneuver="{{lookup TERIOCK.options.ability.maneuver system.maneuver}}"
      data-tooltip="Execution Time"
    >
      <div class="ab-box-icon">
        {{{TERIOCK.display.icons.execution}}}
      </div>
      <div class="ab-box-content">
        {{#if (eq system.maneuver "active")}}
          {{lookup
            TERIOCK.options.ability.executionTime.active
            system.executionTime
          }}
        {{/if}}
        {{#if (eq system.maneuver "reactive")}}
          {{lookup
            TERIOCK.options.ability.executionTime.reactive
            system.executionTime
          }}
        {{/if}}
        {{#if (eq system.maneuver "passive")}}
          Passive
        {{/if}}
        {{#if (eq system.maneuver "slow")}}
          {{formInput
            systemFields.executionTime
            value=system.executionTime
            disabled=(not editable)
            classes="ability-bar-input"
          }}
        {{/if}}
      </div>
    </div>
  </div>

  <div class="ab-box-container">
    <div class="ab-box {{#if editable}}delivery-box{{/if}}" data-tooltip="Delivery">
      <div class="ab-box-icon">
        {{{TERIOCK.display.icons.delivery}}}
      </div>
      <div class="ab-box-content">
        {{lookup TERIOCK.options.ability.piercing system.piercing}}
        {{lookup TERIOCK.options.ability.delivery system.delivery.base}}
      </div>
    </div>
  </div>

  <div class="ab-box-container">
    <div
      class="ab-box {{#if editable}}interaction-box interaction-box-{{system.interaction}}{{/if}}"
      data-tooltip="Interaction"
    >
      <div class="ab-box-icon">
        {{{TERIOCK.display.icons.interaction}}}
      </div>
      <div class="ab-box-content">
        {{#if (eq system.interaction "feat")}}
          {{lookup
            TERIOCK.options.ability.featSaveAttribute
            system.featSaveAttribute
          }}
        {{/if}}
        {{lookup TERIOCK.options.ability.interaction system.interaction}}
      </div>
    </div>
  </div>
</div>
