<div class="{{cssClass}} tsheet-page">
  <div class="ab-sheet-everything">
    <div class="ab-sheet-top">
      {{> "systems/teriock/src/templates/document-templates/shared/header.hbs"}}
      <div class="ab-bars">
        <div class="ab-bar ab-bar-1">
          <div class="ab-box-container">
            <div class="ab-box {{#if editable}}field-box{{/if}}" data-tooltip="Discipline">
              <div class="ab-box-icon">
                <i
                  class="fa-fw fa-light fa-{{path TERIOCK.options.tradecraft system.field "icon"}}"
                ></i>
              </div>
              <div class="ab-box-content">
                {{path TERIOCK.options.tradecraft system.field "name"}}
              </div>
            </div>
          </div>
          <div class="ab-box-container">
            <div class="ab-box {{#if editable}}tradecraft-box{{/if}}" data-tooltip="Tradecraft">
              <div class="ab-box-icon">
                <i
                  class="fa-fw fa-light fa-{{path
                    TERIOCK.options.tradecraft
                    system.field
                    "tradecrafts"
                    system.tradecraft
                    "icon"
                  }}"
                ></i>
              </div>
              <div class="ab-box-content">
                {{path TERIOCK.options.tradecraft system.field "tradecrafts" system.tradecraft "name"}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ab-main">
      {{formGroup
        systemFields.description
        value=system.description
        enriched=enriched.description
        disabled=(not editable)
      }}
      <div class="ab-section-container">
        <div class="ab-section">
          <span class="ab-section-title ab-section-title-dynamic">{{path TERIOCK.index.tradecrafts
                                                                         system.tradecraft}}</span>
        </div>
        <div class="ab-improvement-bar ab-tradecraft-description">
          {{{enriched.tradecraft}}}
        </div>
      </div>
    </div>
    {{> "systems/teriock/src/templates/document-templates/shared/macros.hbs"}}
  </div>
</div>