<div class="ab-bar">
  {{formBox
    (path TERIOCK.options.power system.type "name")
    icon=(path TERIOCK.options.power system.type "icon")
    tooltip="Power Type"
    classes="power-box"
  }}
  {{formBox
    (ifThen system.proficient "Proficient" "Not Proficient")
    action=(ifThen editable "toggleProficient" "")
    tooltip="Proficient?"
    icon=(ifThen system.proficient "check" "xmark")
  }}
</div>