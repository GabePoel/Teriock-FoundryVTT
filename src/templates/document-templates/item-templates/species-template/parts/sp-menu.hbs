<div class="ab-menu">
  <div class="ab-menu-content">
    <div class="ab-menu-bar">
      <div class="tgrid ap-check-grid g2">
        {{formGroup
          systemFields.size.fields.enabled
          value=system.size.enabled
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
        {{formGroup
          systemFields.proficient
          value=system.proficient
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
        {{formGroup
          systemFields.fluent
          value=system.fluent
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
        {{formGroup
          systemFields.disabled
          value=system.disabled
          disabled=(not editable)
          classes="tgrid-item"
          rootId=uuid
        }}
      </div>
      <div class="tgrid g2">
        <div class="tgrid-item gi1">
          <div class="ab-multi-select-label">
            <label class="tsubtle">Traits</label>
            {{formInput
              systemFields.traits
              value=system.traits
              disabled=(not editable)
              classes="teriock-full-width ab-menu-inline"
              dataset=(object tooltip="Traits")
              rootId=uuid
            }}
          </div>
        </div>
        <div class="tgrid-item gi1">
          <div class="ab-multi-select-label">
            <label class="tsubtle">Transformation Level</label>
            {{formInput
              systemFields.transformationLevel
              value=system.transformationLevel
              disabled=(not editable)
              classes="teriock-full-width ab-menu-inline"
              dataset=(object tooltip="Transformation Level")
              rootId=uuid
            }}
          </div>
        </div>
        {{#if (not (and (exists system.size.min) (exists system.size.max)))}}
          <div class="tgrid-item">
            <button
              class="ab-menu-button ab-size-button"
              {{#if (not editable)}}
              disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Size Range
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.adult))}}
          <div class="tgrid-item">
            <button
              class="ab-menu-button ab-lifespan-button"
              {{#if (not editable)}}
              disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Lifespan
            </button>
          </div>
        {{/if}}
        {{> (template "document-templates/shared/display-field-buttons.hbs")}}
      </div>
    </div>
  </div>
</div>