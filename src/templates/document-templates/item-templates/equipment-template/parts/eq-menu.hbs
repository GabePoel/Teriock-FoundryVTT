<div class="ab-menu">
  <div class="ab-menu-content">
    <div class="ab-menu-bar">
      <div class="tgrid ab-check-grid">
        {{> (template "document-templates/shared/display-toggles.hbs")}}
      </div>
    </div>
    <div class="ab-menu-bar">
      <div class="tgrid g2">
        <div class="tgrid-item">
          <div class="ab-multi-select-label">
            <label class="tsubtle">Equipment Classes</label>
            {{formInput
              systemFields.equipmentClasses
              value=system.equipmentClasses
              disabled=(not editable)
              classes="teriock-full-width ab-menu-inline"
              rootId=uuid
            }}
          </div>
        </div>
        <div class="tgrid-item">
          <div class="ab-multi-select-label">
            <label class="tsubtle">Fighting Style</label>
            {{formInput
              systemFields.fightingStyle
              value=system.fightingStyle
              disabled=(not editable)
              classes="teriock-full-width"
              rootId=uuid
            }}
          </div>
        </div>
      </div>
    </div>
    <div class="ab-menu-bar">
      <div class="tgrid g3">
        {{#if (not (exists system.damage.base.saved))}}
          <div class="tgrid-item">
            <button
              class="ab-menu-button ab-damage-button"
              {{#if (not editable)}}
              disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Damage
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.damage.twoHanded.saved))}}
          <div class="tgrid-item">
            <button
              class="ab-menu-button ab-two-handed-damage-button"
              {{#if (not editable)}}
              disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Two-Handed Damage
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.range.long.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-range-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Normal Range
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.range.short.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-short-range-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Short Range
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.av.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-av-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              AV
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.bv.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-bv-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              BV
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.weight.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-weight-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Weight
            </button>
          </div>
        {{/if}}
        {{#if (not (exists system.tier.saved))}}
          <div class="tgrid-item">
            <button class="ab-menu-button ab-tier-button"
              {{#if (not editable)}}
                    disabled="disabled"
              {{/if}}
            >
              {{{TERIOCK.display.icons.add}}}
              Tier
            </button>
          </div>
        {{/if}}
        {{> (template "document-templates/shared/display-field-buttons.hbs")}}
      </div>
    </div>
  </div>
</div>
