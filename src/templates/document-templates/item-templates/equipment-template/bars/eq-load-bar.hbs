<div class="ab-bar">
  {{formBox
    (formInput
      systemFields.tier
      value=system._source.tier.raw
      disabled=(not editable)
      dataset=(object tooltip="Presence Tier")
      placeholder="0"
    )
    icon=TERIOCK.display.icons.attunable.tier
    label="TIER"
    unselected=(ifThen system.tier.raw system.tier.value "")
  }}
  {{formBox
    (formInput
      systemFields.weight
      value=system._source.weight.raw
      disabled=(not editable)
      dataset=(object tooltip="Weight")
    )
    icon=TERIOCK.display.icons.equipment.weight
    label="lb"
    unselected=system.weight.value
  }}
  {{formBox
    (formInput
      systemFields.minStr
      value=system._source.minStr.raw
      disabled=(not editable)
      dataset=(object tooltip="Minimum STR")
    )
    icon=TERIOCK.display.icons.equipment.minStr
    label="STR"
    unselected=system.minStr.value
  }}
</div>