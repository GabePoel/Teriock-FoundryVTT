<div class="ab-bar">
  {{formBox
    (formInput
      systemFields.tier.fields.raw
      value=system.tier.raw
      disabled=(not editable)
      dataset=(object tooltip="Presence Tier")
    )
    icon=(path TERIOCK.display.icons "tier")
    unselected=(ifThen system.tier.raw system.tier.raw 0)
    label="TIER"
  }}
  {{formBox
    (formInput
      systemFields.weight
      value=system.weight
      disabled=(not editable)
      dataset=(object tooltip="Weight")
    )
    icon=(path TERIOCK.display.icons "weight")
    label="lb"
  }}
  {{formBox
    (formInput
      systemFields.minStr
      value=system.minStr
      disabled=(not editable)
      dataset=(object tooltip="Minimum STR")
    )
    label="STR"
    icon=(path TERIOCK.display.icons "minStr")
  }}
</div>
