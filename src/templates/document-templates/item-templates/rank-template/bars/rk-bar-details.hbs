<div class="ab-bar">
  {{formBox
    (formInput
      systemFields.maxAv
      value=system.maxAv
      disabled=(not editable)
    )
    icon=TERIOCK.display.icons.armament.av
    unselected=(ifThen (eq system.maxAv 0) "No Armor" (concat system.maxAv " Max Worn AV"))
    tooltip=(localize "TERIOCK.SYSTEMS.BaseItem.FIELDS.maxAv.label")
  }}
  {{formBox
    (ifThen system.innate "Innate" "Learned")
    action=(ifThen editable "toggleInnate" "")
    tooltip="Origin"
    icon=(ifThen system.innate "person-rays" "book")
  }}
</div>