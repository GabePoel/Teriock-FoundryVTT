<div class="ch-attribute-box tbox toutline">
  <div class="tgrid g4">
    <div class="tsubtle tcenter">
      Feat
    </div>
    <div class="tsubtle tcenter">
      Attribute
    </div>
    <div class="tsubtle tcenter">
      Score
    </div>
    <div class="tsubtle tcenter">
      Save
    </div>
    {{#each system.attributes as |attribute name|}}
      <div class="tcolored tcenter ch-attribute-save-box" data-attribute="{{name}}"
           data-path="system.attributes.{{name}}.saveProficient" data-bool="{{attribute.saveProficient}}"
           data-action="quickToggle" data-tooltip-direction="LEFT">
        {{{ifThen
          attribute.saveFluent
          '<i class="thover fa-solid fa-circle-dot" data-tooltip="Fluent"></i>'
          (ifThen
            attribute.saveProficient
            '<i class="thover fa-regular fa-circle-dot" data-tooltip="Proficient"></i>'
            '<i class="thover fa-regular fa-circle" data-tooltip="None"></i>'
          )
        }}}
      </div>
      <div class="tcenter thover" style="text-transform: uppercase;" data-action="rollFeatSave"
           data-attribute="{{name}}" data-tooltip="Roll {{uc (name)}} Save" data-tooltip-direction="LEFT">
        {{name}}
      </div>
      <div class="tcenter">
        {{formInput
          (path ../systemFields "attributes.fields" name "fields.value")
          value=attribute.value
          classes="ch-attribute-input tcolored tcenter ttransparent"
          disabled=(eq name "unp")
        }}
      </div>
      <div class="tcolored tcenter">
        {{attribute.saveBonus}}
      </div>
    {{/each}}
  </div>
</div>
