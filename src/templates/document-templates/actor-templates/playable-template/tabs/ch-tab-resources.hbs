<div class="character-tab resources">
  <h1>{{localize "TERIOCK.SHEETS.Actor.TABS.Resources.title"}}</h1>
  <div class="character-tab-page teriock-block-results" data-search-key="resources">
    <div class="teriock-block-display">
      <div class="teriock-block-options">
        {{blockOptions
          settings.menus.resourceOptions null null settings.resourceFilters.search "resource"
          key="resources" addAction="createResource"
          gapless="sheetBlockResourcesGapless"
          size="sheetBlockResourcesSize"
        }}
      </div>
      {{> (template "document-templates/actor-templates/playable-template/results/search-results.hbs")
        docs=resources
        searchKey="resources"
        displayKey="resource"
        empty="resources"
        gapless="sheetBlockResourcesGapless"
        size="sheetBlockResourcesSize"
      }}
    </div>
  </div>
</div>
