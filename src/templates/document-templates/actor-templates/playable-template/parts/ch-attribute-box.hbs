<div class="ch-attribute-box tbox toutline">
  <div class="tgrid g4 tradecraft-panel">
    <div class="attribute-container tgrid g4 gi4" data-tooltip-direction="UP">
      <div class="tsubtle tcenter" data-tooltip="Proficiency/Fluency">
        Pro
      </div>
      <div class="tsubtle tcenter" data-tooltip="Name">
        Attribute
      </div>
      <div class="tsubtle tcenter" data-tooltip="Attribute Score">
        Score
      </div>
      <div class="tsubtle tcenter" data-tooltip="Total Save Modifier">
        Mod
      </div>
    </div>
    {{#each TERIOCK.index.attributesFull as |attribute name|}}
      <div
        class="attribute-container tgrid g4 gi4"
        data-tooltip-direction="LEFT"
        data-tooltip-left="true"
        data-make-tooltip="true"
        {{#if (eq name "unp")}}
        data-uuid="{{ruleUuid "Core" "Presence"}}"
        {{else}}
        data-uuid="{{ruleUuid "Core" (path @root/TERIOCK.index.attributesFull name)}}"
        {{/if}}
      >
        <div
          class="tcolored tcenter ch-attribute-save-box grid-fill"
          data-action="increment"
          data-path="system.attributes.{{name}}.competence.raw"
          data-tooltip-class=""
        >
          <i
            class="thover {{path @root/system.attributes name "iconClass"}}"
            data-tooltip="{{path @root/system.attributes name "competence.description"}}"
          ></i>
        </div>
        <div
          class="tcenter thover draggable"
          style="text-transform: uppercase;"
          data-action="rollFeatSave"
          data-attribute="{{name}}"
          data-tooltip-direction="LEFT"
          data-uuid="{{lookup @root/attributeMacros name}}"
        >
          {{name}}
        </div>
        <div class="tcenter affix">
          <div class="unselected">
            <span
              class="ch-attribute-input tcolored tcenter ttransparent"
            >{{{path @root/system.attributes name "score"}}}</span>
          </div>
          {{formInput
            (path @root/systemFields "attributes.fields" name "fields.score")
            value=(ifThen
              (bool (eq name "unp"))
              @root/system.attributes.unp.score
              (path @root/system._source.attributes name "score"))
            classes="ch-attribute-input tcolored tcenter ttransparent selected"
            disabled=(bool (eq name "unp"))
          }}
        </div>
        <div class="tcolored tcenter">
          {{path @root/system.attributes name "quickValue"}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
