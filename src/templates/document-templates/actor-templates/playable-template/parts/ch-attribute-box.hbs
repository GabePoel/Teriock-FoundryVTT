<div class="ch-attribute-box tbox toutline">
  <div class="tgrid g4">
    <div class="tsubtle tcenter">
      Feat
    </div>
    <div class="tsubtle tcenter">
      Attribute
    </div>
    <div class="tsubtle tcenter">
      Score
    </div>
    <div class="tsubtle tcenter">
      Save
    </div>
    {{#each TERIOCK.index.attributesFull as |attribute name|}}
      <div class="tradecraft-container tgrid g4 gi4"
           data-tooltip-direction="LEFT"
           data-tooltip-left="true"
           data-make-tooltip="true"
           data-uuid="{{path @root/TERIOCK.system.uuids.attributes name}}"
      >
        <div class="tcolored tcenter ch-attribute-save-box"
             data-action="quickToggle"
             data-attribute="{{name}}"
             data-bool="{{path @root/system.attributes name "saveProficient"}}"
             data-path="system.attributes.{{name}}.saveProficient"
        >
          {{#if (path @root/system.attributes name "saveFluent")}}
            <i class="thover fa-solid fa-circle-dot" data-tooltip="Fluent"></i>
          {{else}}
            {{#if (path @root/system.attributes name "saveProficient")}}
              <i class="thover fa-regular fa-circle-dot" data-tooltip="Proficient"></i>
            {{else}}
              <i class="thover fa-regular fa-circle" data-tooltip="None"></i>
            {{/if}}
          {{/if}}
        </div>
        <div class="tcenter thover"
             style="text-transform: uppercase;"
             data-action="rollFeatSave"
             data-attribute="{{name}}"
             data-tooltip-direction="LEFT"
        >
          {{name}}
        </div>
        <div class="tcenter affix">
          <div class="unselected">
            <span
              class="ch-attribute-input tcolored tcenter ttransparent"
            >{{{path @root/system.attributes name "score.value"}}}</span>
          </div>
          {{formInput
            (path @root/systemFields "attributes.fields" name "fields.score.fields.saved")
            value=(path @root/system.attributes name "score.saved")
            classes="ch-attribute-input tcolored tcenter ttransparent selected"
            disabled=(eq name "unp")
          }}
        </div>
        <div class="tcolored tcenter">
          {{path @root/system.attributes name "saveBonus"}}
        </div>
      </div>
    {{/each}}
  </div>
</div>
